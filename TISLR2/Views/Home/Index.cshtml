@model IEnumerable<TISLR2.Models.User>
@{
    ViewBag.Title = "Все пользователи";
}
<h1>Главная страница</h1>
<a asp-action="Create">Добавить пользователя</a>
<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                <a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id">
                    Подробнее
                </a> |
                <a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">
                    Изменить
                </a> |
                <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">
                    Удалить
                </a>
            </td>
        </tr>
    }
</table>